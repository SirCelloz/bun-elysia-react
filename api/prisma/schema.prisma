generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String @unique
  password String
  post     Post[]
}

model Post {
  id        Int    @id @default(autoincrement())
  title     String @unique
  body      String @db.VarChar(1000)
  author    User   @relation(fields: [author_id], references: [id])
  author_id Int
}
